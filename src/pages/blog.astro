		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{pageTitle}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			 href="https://fonts.googleapis.com/css2?family=DynaPuff:wght@400..700&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet"
		/>
		<style>
			/* Curseur personnalisé */
			.custom-cursor {
				--left: calc(var(--mouse-x) - 10px);
				--top: calc(var(--mouse-y) - 10px);
				width: 30px;
				height: 30px;
				background-color: black;
				translate: var(--left) var(--top);
				transition: 0.1s ease-out;
				border-radius: 100%;
				position: absolute;
				z-index: 100;
			}

			.magnet-effect {
                transition: transform 0.3s ease;
            }
            .magnet-effect:hover {
                transform: translateY(-5px);
            }
		</style>
	</head>
	<body>
		<!-- <div class="custom-cursor"></div>  -->
		<header
                class="flex w-full border-b-2 border-black font-regular py-7 px-14 justify-between flex-wrap gap-6 font-poppins"
            >
			<div class="flex">
				<a
					class="relative border-2 border-black bg-transparent py-2 px-5 uppercase text-black transition-colors before:absolute before:left-0 before:top-0 before:-z-10 before:h-full before:w-full before:origin-bottom-left before:scale-y-0 before:bg-black before:transition-transform before:duration-300 before:content-[''] hover:text-white before:hover:scale-y-100 hover-target"
					href="/"
				>
					accueil
				</a>
			</div>
                <div class="flex items-center gap-2">
                    <a
                        class="magnet-effect"
                        href="https://www.behance.net/mystic_all/projects"
                        ><img
                            class="w-10"
                            src="/assets/behance.svg"
                            alt=""
                        /></a
                    >
                    <a
                        class="magnet-effect"
                        href="https://www.linkedin.com/in/arthur-alletto-8a2028259/"
                        ><img
                            class="w-10"
                            src="/assets/linkedin.svg"
                            alt=""
                        /></a
                    >
                    <a class="magnet-effect" href=""
                        ><img class="w-10" src="/assets/mail.svg" alt="" /></a
                    >
                </div>
                <div class="flex">
                    <a
                        class="relative border-2 border-black bg-transparent py-2 px-5 uppercase text-black transition-colors before:absolute before:left-0 before:top-0 before:-z-10 before:h-full before:w-full before:origin-bottom-left before:scale-y-0 before:bg-black before:transition-transform before:duration-300 before:content-[''] hover:text-white before:hover:scale-y-100 hover-target"
                        href="/about/"
                    >
                        à propos de moi
                    </a>
                </div>
            </header>
		<section class="font-regular font-poppins">
			<h2 class=" text-center pt-14 font-lato text-5xl font-semibold uppercase"> mes projets </h2>
			<div
				class="flex flex-wrap pt-20 justify-center items-center container mx-auto p-4 gap-6"
			>
				<!-- Projet 1 -->
				<a class="rounded-2xl relative overflow-hidden group">
					<div
						class="relative overflow-hidden before:absolute before:w-full before:h-full before:bg-gradient-custom-hiero before:bottom-[-80px] before:transition-all before:duration-[500ms] group-hover:before:bottom-0 before:z-10 h-full"
					>
						<img
							src="/assets/Cover-hiero.png"
							alt="Image Projet 1"
							class="w-full h-full object-cover object-top transition-all duration-[500ms] group-hover:translate-y-[-50px] group-hover:blur-[1px] relative z-0"
						/>
						<h3
							class="absolute bottom-[-50px] left-4 text-white text-xl font-medium transition-all duration-[500ms] group-hover:bottom-6 z-20"
						>
							Création de flyers pour Hiero
						</h3>
					</div>
				</a>
				<!-- Projet 2 -->
				<a class="rounded-2xl relative overflow-hidden group" href="/jamventure/">
					<div
						class="relative overflow-hidden before:absolute before:w-full before:h-full before:bg-gradient-custom-jamventure before:bottom-[-80px] before:transition-all before:duration-[500ms] group-hover:before:bottom-0 before:z-10 h-full"
					>
						<img
							src="/assets/Cover-jam.png"
							alt="Image Projet 1"
							class="w-full h-full object-cover object-top transition-all duration-[500ms] group-hover:translate-y-[-50px] group-hover:blur-[1px] relative z-0"
						/>
						<h3
							class="absolute bottom-[-50px] left-4 text-white text-xl font-medium transition-all duration-[500ms] group-hover:bottom-6 z-20"
						>
							Production d'un jeu vidéo
						</h3>
					</div>
				</a>

				<!-- Projet 3 -->

				<a class="rounded-2xl relative overflow-hidden group">
					<div
						class="relative overflow-hidden before:absolute before:w-full before:h-full before:bg-gradient-custom-ceramique before:bottom-[-80px] before:transition-all before:duration-[500ms] group-hover:before:bottom-0 before:z-10 h-full"
					>
						<img
							src="/assets/Cover-perso.png"
							alt="Image Projet 1"
							class="w-full h-full object-cover object-top transition-all duration-[500ms] group-hover:translate-y-[-50px] group-hover:blur-[1px] relative z-0"
						/>
						<h3
							class="absolute bottom-[-50px] left-4 text-white text-xl font-medium transition-all duration-[500ms] group-hover:bottom-6 z-20"
						>
							Création de visuels et Motion design
						</h3>
					</div>
				</a>
			</div>
		</section>

