---
const pageTitle = "Page d'accueil";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{pageTitle}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=DynaPuff:wdth,wght@75..100,400..700&display=swap"
			rel="stylesheet"
		/>
		<style>
			/* Curseur personnalisé */
			.custom-cursor {
				position: fixed;
				top: 0;
				left: 0;
				width: 30px;
				height: 30px;
				background-color: black;
				border-radius: 50%;
				pointer-events: none;
				mix-blend-mode: difference;
				transform: translate(-50%, -50%);
				will-change: transform;
			}
		</style>
	</head>
	<body class="cursor-none">
		<div class="h-screen">
			<header class="flex w-full fixed py-6 px-14">
				<div class="w-1/2">
					<h1 class="font-dmsans font-medium">ARTHUR ALLETTO</h1>
				</div>
				<div class="flex w-1/2 justify-end">
					<a
						class="cursor-none font-dmsans font-medium uppercase hover-target"
						href="/about/"
					>
						à propos de moi
					</a>
				</div>
			</header>
			<section
				class="flex flex-col h-full justify-center items-center font-dmsans font-medium"
			>
				<h2 class="tracking-widest text-base uppercase">
					graphic designer / motion designer
				</h2>
				<h1 class="font-dynapuff font-black text-8xl uppercase">
					portfolio
				</h1>
				<a
					class="cursor-none relative border-2 border-black bg-transparent mt-5 py-2 px-5 uppercase text-black transition-colors before:absolute before:left-0 before:top-0 before:-z-10 before:h-full before:w-full before:origin-bottom-left before:scale-y-0 before:bg-black before:transition-transform before:duration-300 before:content-[''] hover:text-white before:hover:scale-y-100 hover-target"
					href="/blog/">entrer</a
				>
			</section>
		</div>

		<!-- Curseur personnalisé -->
		<div class="custom-cursor"></div>

		<script>
			// Curseur avec effet de vitesse et rebond
			const cursor = document.querySelector(".custom-cursor") as HTMLElement | null;
			let posX = 0,
				posY = 0; // Position actuelle du curseur
			let mouseX = 0,
				mouseY = 0; // Position cible de la souris
			const speed = 0.2; // Vitesse de "rattrapage"
		
			// Mettre à jour les positions cibles en fonction du mouvement de la souris
			document.addEventListener("mousemove", (e) => {
				mouseX = e.clientX;
				mouseY = e.clientY;
			});
		
			// Animation "bouncy"
			function animateCursor() {
				if (cursor) {
					const dx = mouseX - posX;
					const dy = mouseY - posY;
		
					
					posX += dx * speed;
					posY += dy * speed;
		
					// Met à jour la position du curseur
					cursor.style.transform = `translate(${posX}px, ${posY}px) translate(-50%, -50%)`;
				}
		
				// Boucle d'animation
				requestAnimationFrame(animateCursor);
			}
		
			// Lance l'animation
			animateCursor();
		</script>
		
	</body>
</html>
 